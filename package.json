{
  "type": "module",
  "scripts": {
    "copy-fonts": "cpx \"src/styles/fontawesome/fonts/**/*\" \"dist/fonts/\"",
    "build": "npm run build-css && npm run copy-fonts",
    "build-css": "vite build",
    "preview": "vite preview",
    "dev": "vite --host",
    "dev-open": "vite --host --open",
    "watch": "vite build --watch",
    "serve": "vite preview --host --port 3000",
    "dev-full": "concurrently \"npm run watch\" \"npm run serve\" \"npm run copy-fonts\"",
    "start": "npm run dev-full"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.0",
    "cpx2": "^8.0.0",
    "postcss": "^8.5.6",
    "postcss-class-prefix": "^0.3.0",
    "postcss-prefixwrap": "^1.55.0",
    "sass-embedded": "^1.89.2",
    "vite": "^7.0.0",
    "vite-plugin-static-copy": "^3.1.0"
  },
  "dependencies": {
    "bootstrap": "5.3.7"
  }
}